{
  "name": "breadknife",
  "version": "1.1.5",
  "description": "Simple A/B Testing Library",
  "main": "lib/breadknife.min.js",
  "types": "lib/types.ts",
  "author": "Sean Verhaagen",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Dreii/breadknife.js"
  },
  "bugs": {
    "url": "https://github.com/Dreii/breadknife.js/issues"
  },
  "keywords": [
    "A/B",
    "Test",
    "Lean",
    "Bread",
    "Knife",
    "Slice"
  ],
  "files": [
    "lib /**/*"
  ],
  "scripts": {
    "test": "jest --config jestconfig.json",
    "build": "tsc && npm run minify",
    "minify": "uglifyjs lib/**/*.js --compress --mangle --warn --output lib/breadknife.min.js",
    "watch": "tsc --watch",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "devDependencies": {
    "@types/jest": "^26.0.4",
    "codecov": "^3.7.0",
    "jest": "^26.1.0",
    "prettier": "^2.0.5",
    "ts-jest": "^26.1.1",
    "tslint": "^6.1.2",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.9.6",
    "uglify-js": "^3.10.0"
  }
}